import colors
class Monster:
    def __init__(self, char, fg):
        self.char = char
        self.x = 0
        self.y = 0
        self.fg = fg

# g - goblin
# G - giant
# D - dragon
# d - baby dragon
# w - witch
# W - wyvern
# f - fury
# F - flying dragon

class BabyDragon(Monster):
    def __init__(self):
        super().__init__('d', colors.red)
        self.health = 50
        self.speed = 10
        self.attack = 5

class Dragon(Monster):
    def __init__(self):
        super().__init__('D', colors.dark_red)
        self.health = 100
        self.speed = 20
        self.attack = 10

class Goblin(Monster):
    def __init__(self):
        super().__init__('g', colors.green)
        self.speed = 5
        self.health = 25
        self.attack = 12

class Giant(Monster):
    def __init__(self):
        super().__init__('G', colors.dark_green)
        self.health = 200
        self.speed = 50
        self.attack = 25

class Witch(Monster):
    def __init__(self):
        super().__init__('w', colors.grey)
        self.health = 15
        self.speed = 5
        self.attack = 2

class Wyvern(Monster):
    def __init__(self):
        super().__init__('W', colors.grey)
        self.speed = 15
        self.health = 80
        self.attack = 7

class Fury(Monster):
    def __init__(self):
        super().__init__('f', colors.yellow)
        self.speed = 5
        self.health = 80
        self.attack = 2

class FlyingDragon(Monster):
    def __init__(self):
        super().__init__('F', colors.dark_yellow)
        self.speed = 19
        self.health = 200
        self.attack = 30

all_monsters = [FlyingDragon, Fury, Wyvern, Witch, Giant, Goblin, Dragon, BabyDragon]
